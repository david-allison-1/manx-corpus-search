@using System.Text.RegularExpressions
@using CorpusSearch.Model

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Manx Corpus - Full Document Listing</title>

    <!-- Bootstrap -->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    
    <style>
    .noteRow {
       background-color: aliceblue;
       font-size: small;
       padding: 0.15rem;
       text-align: center;
    }
    .lead {
       display: inline-block;
    }
    @@media only screen and (max-width: 600px) {
        .lead {
           margin-bottom: 18px;
        }
    }
    @@media only screen and (min-width: 600px) {
        .lead {
           margin-bottom: 6px;
        }
    }
    </style>
</head>
<body style="padding: 24px">

@{
    var documents = ViewData["Documents"] as List<IDocument> ?? [];
}

<h1><a href="/" style="text-decoration: none">⇦</a> Full Document Listing (@documents.Count documents)</h1>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
 

@foreach (var document in documents.OrderBy(x => x.CreatedCircaStart))
{
    <a class="lead" href="/Browse/@document.Ident">@document.Name</a> @document.GetFullYear()<br/>
}

</body>
</html>


