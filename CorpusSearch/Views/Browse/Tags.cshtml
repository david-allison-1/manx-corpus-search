@using System.Web
@model CorpusSearch.Controllers.TagListModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@Model.Title</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
<h1 style="margin: 24px"><a href="/" style="text-decoration: none">⇦</a> @Model.Title</h1>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

<ul>
@foreach (var tag in Model.Tags)
{
    <li><h2><a href="/Tags/@tag.Name">@tag.Name</a></h2></li>
    <ul>
    @foreach (var childTag in tag.Children)
    {
        var tagDelimiter = HttpUtility.UrlEncode("::");
        <li><h4><a href="/Tags/@(tag.Name + tagDelimiter + childTag.Name)">@childTag.Name</a></h4></li>
    }   
    </ul>
}
</ul>

</body>
</html>


